{
  "name": "galsen-streak",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run build && bun ./dist/index.js",
    "dev": "bun run --watch ./src/index.ts",
    "build": "bun run clean && tsc && bun build src/index.ts --outdir dist --minify --target bun",
    "clean": "bunx rimraf dist",
    "format": "bunx --bun biome format --write",
    "lint": "bunx --bun biome lint",
    "check": "bunx --bun biome check"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "hono": "^4.11.3"
  }
}
