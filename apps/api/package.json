{
  "name": "api",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run build && bun ./dist/index.js",
    "dev": "bun run --watch ./src/index.ts",
    "build": "bun run clean && tsc && bun build src/index.ts --outdir dist --minify --target bun",
    "clean": "bunx rimraf dist",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "hono": "^4.11.4"
  }
}
